<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.CustomerFragment">


        <ImageView
            android:id="@+id/imageView_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_setting_new"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_notification_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_notification_bell"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/iran_yekan"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="مهدی نظامی پور" />

        <TextView
            android:id="@+id/textView_customer_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/digikala_gray"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_customer_name"
            app:layout_constraintStart_toStartOf="@+id/textView_customer_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_customer_name"
            tools:text="Username" />


        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/textView_customer_userName"
            app:layout_constraintStart_toStartOf="@+id/textView_customer_userName"
            app:layout_constraintTop_toBottomOf="@+id/textView_customer_userName" />

        <ImageView
            android:id="@+id/imageView_activation_wallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/icon_wallet"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.25" />

        <ImageView
            android:id="@+id/imageView_customer_point"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:defaultFocusHighlightEnabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/icon_point"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/textView_activation_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan"
            android:text="@string/activation_wallet"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_activation_wallet"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/imageView_activation_wallet"
            app:layout_constraintTop_toBottomOf="@+id/imageView_activation_wallet" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/far_trafc_bd"
            android:text="0"

            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan"
            android:text="@string/point"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_customer_point"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="@+id/imageView_customer_point"
            app:layout_constraintTop_toBottomOf="@+id/imageView_customer_point" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="16dp"
            android:background="@color/digikala_dark_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/iran_yekan"
            android:text="@string/my_orders"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView_delivered_orders"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_delivered_orders"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintVertical_bias="0.30" />

        <ImageView
            android:id="@+id/imageView_in_process_orders"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_in_process_orders"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintVertical_bias="0.30" />

        <ImageView
            android:id="@+id/imageView_signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_sign_out"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_setting"
            app:layout_constraintEnd_toStartOf="@+id/imageView_setting"
            app:layout_constraintTop_toTopOf="@+id/imageView_setting" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan"
            android:text="@string/delivered_orders"
            android:textColor="@android:color/black"

            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_delivered_orders"
            app:layout_constraintStart_toStartOf="@+id/imageView_delivered_orders"
            app:layout_constraintTop_toBottomOf="@+id/imageView_delivered_orders" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan"
            android:text="@string/in_process_orders"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView_in_process_orders"
            app:layout_constraintStart_toStartOf="@+id/imageView_in_process_orders"
            app:layout_constraintTop_toBottomOf="@+id/imageView_in_process_orders" />

        <TextView
            android:id="@+id/testView_number_of_in_process_orders"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView_in_process_orders"
            tools:text="2" />

        <TextView
            android:id="@+id/testView_number_of_delivered_orders"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView_delivered_orders"
            tools:text="2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
