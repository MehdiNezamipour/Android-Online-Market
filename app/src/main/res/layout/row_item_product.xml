<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/row_layout_cardView"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imageView_product_cover"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/place_holder" />

            <TextView
                android:id="@+id/textView_product__title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/iran_yekan"
                android:gravity="start"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black"
                android:textSize="9sp"
                tools:text="Product Title" />

            <View
                android:id="@+id/row_item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    tools:text="150000"
                    android:fontFamily="@font/far_trafc_bd"
                    android:textColor="@color/digikala_green"
                    android:textSize="10sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:gravity="left"
                    android:text="@string/tomans"
                    android:textColor="@color/digikala_green"
                    android:textSize="10sp" />

            </FrameLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>